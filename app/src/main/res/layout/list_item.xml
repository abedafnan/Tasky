<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/task_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/card_text_margin"
            android:layout_marginRight="@dimen/vertical_margin"
            android:layout_marginStart="@dimen/card_text_margin"
            android:layout_marginTop="@dimen/horizontal_margin"
            android:text="placeholder text"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/priority_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/card_text_margin"
            android:layout_marginEnd="@dimen/card_text_margin"
            android:text="0"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>